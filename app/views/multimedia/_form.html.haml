= form_for @multimedia do |f|
  - if @multimedia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@multimedia.errors.count, "error")} prohibited this multimedia from being saved:"
      %ul
        - @multimedia.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .filed
    = f.label :file
    = f.file_field :file, accept: 'video/*, audio/*, image/*'
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :tags
    = f.text_field :tags
  .actions
    = f.submit 'Save'
